<form action="/posts" method="post">
  <div>
    <label for="name">名前: </label>
    <input type="text" name="name">
  </div>
  <div>
    <label for="content">投稿内容: </label>
    <textarea name="content" cols=50 rows=10></textarea>
  </div>
  <input type="submit" value="投稿">
</form>

<% @posts.each do |post| %>
  <h1><%= post['name'] %></h1>
  <p><%= post['content'] %></p>
<% end %>